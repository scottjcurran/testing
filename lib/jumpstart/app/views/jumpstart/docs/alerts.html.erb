<% content_for :section_title, "Alerts & Notices" %>

<div class="mb-10">
  <h3 class="mb-4">Alerts</h3>

  <%= render "jumpstart/docs/snippet" do %>
<div class="alert mb-6" role="alert">
  <div class="flex items-start justify-start">
    <%= render_svg "icons/buoy", styles: "fill-current icon mr-4 mt-1 flex-no-shrink" %>
